<h1> New Products</h1>
@using products_categories.Models
@model Product

@{
    ViewData["Title"] = "Home Page";
}

<body
    class="p-3 mb-2 bg-secondary text-white nes-text text-left container d-flex justify-content-center align-items-center">
    <div class="nes-container is-dark">
        <div style=" padding: 1rem;" class="nes-field is-inline">
            <form asp-action="NewProduct" method="post">
                <div class="form-group">
                    <label for="Productname">Name :</label>
                    <input asp-for="Productname" class="form-control">
                    <span asp-validation-for="Productname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Price">Price:</label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div>
                    <label for="description">Description</label>
                    <textarea asp-for="description" cols="30" rows="3"></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Add Product" class="btn btn-primary">
                </div>
            </form>
            <h1> Existing Products</h1>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <tr>
                                <th> Existing Products</th>
                            </tr>
                            @{
                                foreach (Product p in ViewBag.allproducts)
                                {
                                    <tr>
                                        <td><a href="oneproduct">@p.Productname</a </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
